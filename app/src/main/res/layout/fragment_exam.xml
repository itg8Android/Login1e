<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#a7a4a4"
    tools:context="com.example.vaibhav.login1e.exams.ExamActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_stroke"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="5dp"
        android:id="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:background="@drawable/back_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/id_batch"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Company"
                android:layout_marginBottom="5dp"
                android:id="@+id/company_id"/>
            <EditText
                android:background="@drawable/back_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/id_batch"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Sector"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginBottom="5dp"
                android:id="@+id/sector_id"/>
            <EditText
                android:background="@drawable/back_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/id_batch"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Job Role"
                android:layout_marginBottom="5dp"
                android:id="@+id/job_role_id"/>
            <EditText
                android:background="@drawable/back_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/id_batch"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Batch ID"
                android:layout_marginBottom="5dp"
                android:id="@+id/batch_id"/>
            <EditText
                android:background="@drawable/back_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/id_batch"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Center"
                android:layout_marginBottom="5dp"
                android:id="@+id/center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/view"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Number of Student"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|normal"
            android:gravity="center"
            android:layout_margin="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true"
            android:id="@+id/linear_view_exam"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Present"
                android:textSize="@dimen/edit_text_size_dd"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/present_stu"
                android:inputType="number"
                android:background="@drawable/back_stroke"

                android:id="@+id/present_edi_text_exam"/>
            <EditText
                android:layout_width="0dp"
                android:drawableRight="@drawable/absent_stu"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Absent"
                android:textSize="@dimen/edit_text_size_dd"
                android:layout_marginLeft="10dp"

                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/back_stroke"
                android:id="@+id/absent_edi_text_exam"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Viva"
            android:layout_margin="24dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|normal"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/linear2_exam">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Present"
                android:inputType="number"
                android:background="@drawable/back_stroke"
                android:textSize="@dimen/edit_text_size_dd"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/present_stu"

                android:id="@+id/present_viva_edi_text_exam"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:background="@drawable/back_stroke"
                android:paddingLeft="10dp"
                android:textSize="@dimen/edit_text_size_dd"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="Absent"
                android:drawableRight="@drawable/absent_stu"
                android:id="@+id/absent_viva_edi_text_exam"/>
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</ScrollView>
